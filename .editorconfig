root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 88

[*.sh]
indent_size = 2

[*.html.jinja2]
ij_html_attribute_wrap = off
indent_size = 2

[*.{json,yml}]
indent_size = 2

[*.min.js]
indent_style = unset
insert_final_newline = unset
max_line_length = off
