{% extends "layout.html.jinja2" %}
{% set page_title = 'Pricing - ' + app_title %}

{% macro tier_feature(title, description, defaultOpen = false) -%}
  <li x-data="{ itemExpanded: JSON.parse('{{ defaultOpen|tojson }}') }">
    <button @click="itemExpanded = !itemExpanded" class="flex gap-2 text-left">
      <svg class="inline-block h-5 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!itemExpanded">
        <path d="M504-480 320-664l56-56 240 240-240 240-56-56 184-184Z"></path>
      </svg>
      <svg class="inline-block h-5 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-cloak x-show="itemExpanded">
        <path d="M480-344 240-584l56-56 184 184 184-184 56 56-240 240Z"></path>
      </svg>
      <span>{{ title }}</span>
    </button>
    <p x-cloak x-show="itemExpanded" class="text-gray-700 font-normal pl-7 pt-2">
      {{ description }}
    </p>
  </li>
{%- endmacro %}

{% block content %}
  <main class=" bg-gray-100 border-b border-gray-300  w-full">
    <div class="flex flex-col place-items-center bg-gray-100 bg-gradient-to-b from-gray-100 via-[#4299e110] w-full">
      <section class="max-w-[1200px] px-6">
        <div class="flex flex-col place-items-center pt-12 gap-8 pb-8 text-center">
          <h1 class="text-4xl md:text-8xl text-gray-900 font-semibold tracking-wide">Pricing</h1>
          <h2 class="text-gray-700 text-lg px-6">Pay-as-you-go pricing that scales with your use. Only pay for what you need.</h2>
        </div>
        <ol class="grid grid-cols-1 md:grid-cols-3 gap-4 py-6">
          <li id="returnsuite-free" class="bg-white border border-gray-300 rounded-md shadow-sm">
            <div class="p-4 flex flex-col place-items-center gap-2">
              <h3 class="font-bold text-2xl tracking-wide">Free</h3>
              <p class="text-gray-700 lg:px-8 text-center lg:h-12">
                Explore the platform and contribute to everything shared with you.
              </p>
              <p class="font-medium text-gray-900 h-12">
                <span class="text-4xl">$0</span>
                <span class="text-xl">USD</span>
              </p>
              <a href="{{ app_website }}/login" class="button border-blue-500 text-blue-500 font-semibold w-full mb-2 shadow-sm hover:shadow-md hover:text-blue-600 hover:border-blue-600">
                Get started for free
              </a>
            </div>
            <ul class="p-4 font-medium flex flex-col gap-3 pb-6 ">
              {{ tier_feature("Access to shared properties", "Collaborate as a team member in an organization or via invite with an individual on their projects and view interactive reports for free.", true) }}
              {{ tier_feature("Course material of how to create financial model", "Complete step-by-step walk through of concepts to understand how real estate is modeled.") }}
              {{ tier_feature("Complete documentation from concepts to model", "Complete guides of how to model a project for various property types at a self-directed pace.") }}
              {{ tier_feature("Access to many sample properties to explore", "Sample properties of different types residing in different countries demonstrating how to model a property similar to your.") }}
            </ul>
          </li>
          <li id="returnsuite-standard" class="bg-white border border-gray-300 rounded-md shadow-sm">
            <div class="p-4 flex flex-col place-items-center gap-2">
              <h3 class="font-bold text-2xl tracking-wide">Standard</h3>
              <p class="text-gray-700 lg:px-8 text-center lg:h-12">
                The full experience. Ability to build, share and manage your models.
              </p>
              <p class="font-medium text-gray-900 lg:h-12 flex flex-col lg:flex-row">
                <span>
                  <span class="text-4xl">$54</span>
                  <span class="text-xl">USD</span>
                </span>
                <span>
                  <span class="text-base text-gray-700 font-normal pl-1">per property / month</span>
                </span>
              </p>
              <a href="{{ app_website }}/login" class="button border-blue-500 bg-blue-500 text-white font-semibold w-full mb-2 shadow-sm hover:bg-blue-600 hover:shadow-md hover:text-white hover:border-blue-600">Continue with standard</a>
            </div>
            <ul class="p-4 font-medium flex flex-col gap-3 pb-6">
              <li class="flex gap-4 pb-2 font-normal">
                <svg class="inline-block h-5 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!itemExpanded">
                  <path d="M400-240 160-480l240-240 56 58-142 142h486v80H314l142 142-56 58Z"></path>
                </svg>
                <p>Everything included in Free, plus...</p>
                {{ tier_feature("Build your own models", "Create your own real estate financial models with no restrictions.", true) }}
                {{ tier_feature("Unlimited portfolios", "Group your properties manually or using dynamic tags. Report at the portfolio level with the full list of financial reports.") }}
                {{ tier_feature("Publish reports", "Publish your reports and share with external stake holders and lenders. Track and manage viewing access.") }}
                {{ tier_feature("Organization management", "Manage your organization and team with access controls ensuring your internal requirements are met.", true) }}
                {{ tier_feature("Web-based support", "Get help from ReturnSuite's dedicated team. We can aid during the content entry phase and work with you to ensure a model's cash flows match reality.") }}
              </li>
            </ul>
          </li>
          <li id="returnsuite-enterprise" class="bg-white border border-gray-300 rounded-md shadow-sm">
            <div class="p-4 flex flex-col place-items-center gap-2">
              <h3 class="font-bold text-2xl tracking-wide">Enterprise</h3>
              <p class="text-gray-700 lg:px-8 text-center lg:h-12">
                Direct support on all issues with customization and flexible deployment
              </p>
              <p class="flex place-items-center h-12">
                <span class="rounded-full border border-gray-300 px-6 py-2 font-medium tracking-wide text-gray-700">
                  Contact for pricing
                </span>
              </p>
              <a href="{{ url_for('get_contact') }}?subject=Request for enterprise pricing" class="button border border-gray-900 bg-gray-900 text-white font-semibold w-full mb-2 shadow-sm hover:bg-gray-900 hover:text-white hover:shadow-md hover:border-gray-900">Contact sales</a>
            </div>
            <ul class="p-4 font-medium flex flex-col gap-3 pb-6">
              <li class="flex gap-4 pb-2 font-normal">
                <svg class="inline-block h-5 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!itemExpanded">
                  <path d="M400-240 160-480l240-240 56 58-142 142h486v80H314l142 142-56 58Z"></path>
                </svg>
                <p>Everything included in Standard, plus...</p>
              </li>
              {{ tier_feature("Shared or private instances", "ReturnSuite can provide shared or private instances of the application ensuring complete separation of data to meet security requirements.", true) }}
              {{ tier_feature("Data residency", "Choose a regional cloud deployment to ensure your data resides in a designated location.") }}
              {{ tier_feature("Self-hosted instance options", "Host your own version of ReturnSuite inside your own infrastructure. Setup is easy and can be run on a wide range of hardware.") }}
              {{ tier_feature("Enterprise managed users", "Have complete control over all users on the platform. Centralized login support is an option.") }}
              {{ tier_feature("One-off integrations", "Import or expose your data to other service providers to support your in-house custom workflow.", true) }}
              {{ tier_feature("Customized theme", "Tailor the experience to your brand with a variety of visual options, colors and fonts.") }}
              {{ tier_feature("Premium support", "Direct lines to members of the support team and priority when sorting out technical issues.") }}
            </ul>
          </li>
        </ol>
        <div class="bg-white border border-gray-300 p-6 rounded-md flex flex-col md:flex-row place-items-center gap-6 shadow-sm">
          <svg class="hidden md:inline-block h-12 text-blue-500 shrink-0" viewBox="0 -960 960 960" fill="currentColor">
            <path d="M440-280h80v-168l64 64 56-56-160-160-160 160 56 56 64-64v168ZM160-160q-33 0-56.5-23.5T80-240v-480q0-33 23.5-56.5T160-800h240l80 80h320q33 0 56.5 23.5T880-640v400q0 33-23.5 56.5T800-160H160Zm0-80h640v-400H447l-80-80H160v480Zm0 0v-480 480Z"></path>
          </svg>
          <div>
            <h2 class="font-medium text-base text-gray-900">Get started quickly</h2>
            <p class="text-gray-700">Contact us for help getting started. ReturnSuite can perform the data entry and get your models running at a reasonable rate.</p>
          </div>
          <a href="{{ url_for('get_contact') }}?subject=Request for data entry and setup" class="button border-blue-500 bg-blue-500 text-white font-medium shadow-sm ml-auto hover:bg-blue-600 hover:text-white hover:border-blue-600 w-full md:w-fit">
            Contact sales
          </a>
        </div>
      </section>
      <div class="w-full max-w-[1200px] px-6 md:px-24 relative">
        <hr class="my-24 mb-16 border broder-gray-300 w-full">
        <div class="bg-white rounded-full w-16 h-16 border border-gray-300 absolute top-16 flex place-items-center justify-center" style="left: calc(50% - 2rem)">
          <svg class="inline-block h-6 text-blue-500" viewBox="0 -960 960 960" fill="currentColor">
            <path d="M80-40v-80h800v80H80Zm80-120v-240q-33-54-51-114.5T91-638q0-61 15.5-120T143-874q8-21 26-33.5t40-12.5q31 0 53 21t18 50l-11 91q-6 48 8.5 91t43.5 75.5q29 32.5 70 52t89 19.5q60 0 120.5 12.5T706-472q45 23 69.5 58.5T800-326v166H160Zm80-80h480v-86q0-24-12-42.5T674-398q-41-20-95-31t-99-11q-66 0-122.5-27t-96-72.5Q222-585 202-644.5T190-768q-10 30-14.5 64t-4.5 66q0 58 20.5 111.5T240-422v182Zm240-320q-66 0-113-47t-47-113q0-66 47-113t113-47q66 0 113 47t47 113q0 66-47 113t-113 47Zm0-80q33 0 56.5-23.5T560-720q0-33-23.5-56.5T480-800q-33 0-56.5 23.5T400-720q0 33 23.5 56.5T480-640ZM320-160v-37q0-67 46.5-115T480-360h160v80H480q-34 0-57 24.5T400-197v37h-80Zm160-80Zm0-480Z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="flex flex-col place-items-center">
      <section class="place-items-center pb-12 max-w-[1200px] px-6">
        <h2 class="text-4xl pb-6 text-center">Subscription frequently asked questions</h2>
        <div>
          <h3 class="pl-6 pb-3 font-medium text-xl"></h3>
          <ul class="bg-white max-w-[900px] shadow-sm rounded-md border border-gray-300">
            <li x-data="{open: false}" class="border-b border-gray-300 p-4">
              <button type="button" @click="open = !open" class="flex place-items-center gap-4 text-left">
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!open">
                  <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"></path>
                </svg>
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-cloak x-show="open">
                  <path d="M200-440v-80h560v80H200Z"></path>
                </svg>
                <span class="text-base font-medium text-gray-900">
                  What are the differences between ReturnSuite Free, ReturnSuite
                  Standard, and ReturnSuite Enterprise plans?
                </span>
              </button>
              <div x-cloak x-show="open">
                <p class="px-10 py-2 text-gray-700">
                  All pricing structures provide access to the ReturnSuite product.
                </p>
                <p class="px-10 py-2 text-gray-700">
                  <a href="#returnsuite-free" class="text-blue-600 font-medium">
                    ReturnSuite Free
                  </a>
                  provides access to the platform to explore sample properties and
                  to view and edit properties owned by those who have invited you
                  to collaborate.
                </p>
                <p class="px-10 py-2 text-gray-700">
                  <a href="#returnsuite-standard" class="text-blue-600 font-medium">
                    ReturnSuite Standard
                  </a>
                  provides full access to all features in ReturnSuite,
                  the ability to create your own properties and manage your
                  organization. Each property is billed monthly and a valid payment
                  method must be on file for the account to remain active.
                </p>
                <p class="px-10 py-2 text-gray-700">
                  <a href="#returnsuite-enterprise" class="text-blue-600 font-medium">
                    ReturnSuite Enterprise
                  </a>
                  provides full access to all features in ReturnSuite, along
                  with priority support and a variety of hosting options.
                  The billing agreement is based on the customer's needs.
                </p>
              </div>
            </li>
            <li x-data="{open: false}" class="border-b border-gray-300 p-4">
              <button type="button" @click="open = !open" class="flex place-items-center gap-4 text-left">
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!open">
                  <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"></path>
                </svg>
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-cloak x-show="open">
                  <path d="M200-440v-80h560v80H200Z"></path>
                </svg>
                <span class="text-base font-medium text-gray-900">
                  Can I switch between subscription plans?
                </span>
              </button>
              <div x-cloak x-show="open">
                <p class="px-10 py-2 text-gray-700">
                  You can switch between the ReturnSuite Free and ReturnSuite
                  Standard plans at any time.
                </p>
                <p class="px-10 text-gray-700">
                  Switching from the Free to Standard plan can be done by simply
                  adding your own property to the platform. Once the prompted
                  payment modal is complete, the account will be under the
                  Standard plan.
                </p>
                <p class="px-10 py-2 text-gray-700">
                  Going from a Standard plan to Free requires all paid
                  properties to be deleted from the system.
                </p>
              </div>
            </li>

            <li x-data="{open: false}" class="border-b border-gray-300 p-4">
              <button type="button" @click="open = !open" class="flex place-items-center gap-4 text-left">
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!open">
                  <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"></path>
                </svg>
                <svg class="inline-block h-6 text-gray-900" viewBox="0 -960 960 960" fill="currentColor" x-cloak x-show="open">
                  <path d="M200-440v-80h560v80H200Z"></path>
                </svg>
                <span class="text-base font-medium text-gray-900">
                  How do I view and manage my subscription?
                </span>
              </button>
              <div x-cloak x-show="open">
                <p class="px-10 py-2 text-gray-700">
                  Subscriptions for both individuals and organizations can be
                  viewed and managed in-app under their respective tabs.
                </p>
              </div>
            </li>

            <li x-data="{open: false}" class="border-b border-gray-300 p-4">
              <button type="button" @click="open = !open" class="flex place-items-center gap-4 text-left">
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!open">
                  <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"></path>
                </svg>
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-cloak x-show="open">
                  <path d="M200-440v-80h560v80H200Z"></path>
                </svg>
                <span class="text-base font-medium text-gray-900">
                  What payment methods are accepted?
                </span>
              </button>
              <div x-cloak x-show="open">
                <p class="px-10 py-2 text-gray-700">
                  ReturnSuite uses
                  <a target="_blank" href="https://stripe.com" class="text-blue-600 font-medium">Stripe</a>
                  as its payment provider for your security. All credit cards
                  <a target="_blank" href="https://docs.stripe.com/terminal/payments/collect-card-payment/supported-card-brands" class="text-blue-600 font-medium">supported by Stripe</a>
                  by region are supported by ReturnSuite. Card brands include:
                </p>
                <ul class="px-14 list-disc text-gray-800">
                  <li>Visa</li>
                  <li>Mastercard</li>
                  <li>American Express</li>
                  <li>Discover & Diners Club</li>
                  <li>China UnionPay</li>
                  <li>Japan Credit Bureau</li>
                  <li>Cartes Bancaires</li>
                </ul>
              </div>
            </li>

            <li x-data="{open: false}" class="border-b border-gray-300 p-4">
              <button type="button" @click="open = !open" class="flex place-items-center gap-4 text-left">
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!open">
                  <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"></path>
                </svg>
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-cloak x-show="open">
                  <path d="M200-440v-80h560v80H200Z"></path>
                </svg>
                <span class="text-base font-medium text-gray-900">What happens if payment fails?</span>
              </button>
              <div x-cloak x-show="open">
                <p class="px-10 py-2 text-gray-700">
                  When payment fails, all properties on an account become
                  inactive and cannot be viewed or edited until payment is
                  restored.
                </p>
              </div>
            </li>

            <li x-data="{open: false}" class="p-4">
              <button type="button" @click="open = !open" class="flex place-items-center gap-4 text-left">
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-show="!open">
                  <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"></path>
                </svg>
                <svg class="inline-block h-6 text-gray-900 shrink-0" viewBox="0 -960 960 960" fill="currentColor" x-cloak x-show="open">
                  <path d="M200-440v-80h560v80H200Z"></path>
                </svg>
                <span class="text-base font-medium text-gray-900">
                  How can I get payment receipts?
                </span>
              </button>
              <div x-cloak x-show="open">
                <p class="px-10 py-2 text-gray-700">
                  Receipts are emailed after every successful payment.
                  All payment receipts can be viewed at any time in the account
                  billing section.
                </p>
              </div>
            </li>
          </ul>
        </div>
      </section>
    </div>
  </main>
{% endblock content %}
